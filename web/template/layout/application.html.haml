!!! 5
%html(lang="ja")
  %head
    %title= title
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(name="description" content="#{description}")
    = content_for "ogp_headers", title: title, description: description, thumbnail: thumbnail, url: url
    %meta(http-equiv="X-UA-Compatible" content="E=edge")
    %link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css" crossorigin="anonymous")
    -# FontAwesome fetches webfonts by relative paths so does not work well with solomon CDN
    %link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous")
    %script(type="text/javascript" src="#{Blick.Asset.url(~S(dist/index.js))}")
  %body
    = yield
